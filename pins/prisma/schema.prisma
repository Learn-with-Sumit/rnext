generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Pin {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  type String
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
